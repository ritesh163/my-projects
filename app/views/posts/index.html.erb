<div class="container">
  <p id="notice"><%= notice %></p>
  <h1>Listing Posts</h1>
    <div class="row">
      <div class="col-md-3"><b>Name</b></div>
      <div class="col-md-3"><b>Title</b></div>
      <div class="col-md-3"><b>Content</b></div>
      <div class="col-md-3"></div>
    </div>

<div id="post">

  <% @posts.each do |post| %>
 
    <div class="col-md-3"><%= post.name %></div>
    <div class="col-md-3"><%= post.title %></div>
    <div class="col-md-3"><%= post.content %></div>
    <div class="col-md-3">
      <%= link_to 'Show', post %>
      <%= link_to 'Edit', edit_post_path(post) %>
      <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
    <div>-------------------------------------------------------------------</div>
    <div class="col-md-6"><b>Comment-ID</b></div>
     <div class="col-md-6"><b>Comment</b></div>

    <% post.comments.paginate(:page => params[:page], :per_page => 3).each do |comment| %>
       <div class="col-md-6"><%= comment.id %><br></div>
      <div class="col-md-6"><%= comment.c_body %><br></div><br>
      
    <%end%>
    <%#= will_paginate post.comments   %>
  <% end %>
</div>

<%= will_paginate @posts %>
<div class="form-group">
  <%= link_to 'New Post', new_post_path ,class: "btn btn-primary"%>
</div>
</div>